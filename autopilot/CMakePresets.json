{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 7
  },
  "configurePresets": [
    {
      "name": "vcpkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ARC_AUTOPILOT_TESTS": {
          "type": "BOOL",
          "value": "ON"
        },
        "ARC_AUTOPILOT_SIM": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    }
  ]
}
